<h1>Add Board</h1>
<%= form_with(model:@board, local:true, class: "ui form") do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, placeholder: "Board Name", autofocus: true %>
  </div>
  <%= f.submit nil, class: "ui blue button inverted" %>
  <%= render "form" %>
<% end %>